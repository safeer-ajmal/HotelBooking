@model HotelBooking.Domain.Entities.Hotel

<div class="card border-0 p-4">
	<div class="card-header text-center p-4">
		<h2>Edit</h2>
	</div>
	<div class="card-body border p-4">
		<form method="post">
			<input asp-for="Id" hidden />
			<div class="form-floating">
				<input asp-for="Name" class="form-control border shadow" />
				<label asp-for="Name" class="ms-2"></label>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input asp-for="Location" class="form-control border shadow" />
				<label asp-for="Location" class="ms-2"></label>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input asp-for="Price" class="form-control border shadow" />
				<label asp-for="Price" class="ms-2"></label>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-floating">
				<input asp-for="Stars" class="form-control border shadow" />
				<label asp-for="Stars" class="ms-2"></label>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-success w-100 mt-3">
				<i class="bi bi-check-circle"></i> Save</button>
				<a asp-controller="Hotel" asp-action="Index" class="btn btn-secondary">
					Cancel
				</a>
		</form>
	</div>
</div>